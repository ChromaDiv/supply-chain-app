{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "static/$1",
      "check": true
    },
    {
      "src": "/(.*)",
      "status": 200,
      "dest": "static/index.html"
    }
  ]
}